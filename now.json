{
  "name": "tiny-helpers",
  "builds": [{ "src": "static/**", "use": "@now/static" }],
  "routes": [
    { "src": "/favicon.ico", "dest": "static/favicon.ico" },
    { "src": "/feed.xml", "dest": "static/feed.xml" },
    {
      "src": "/",
      "dest": "/static/index.html"
    },
    {
      "src": "/(?<tag>[^/]*)/?",
      "dest": "/static/$tag/index.html"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
