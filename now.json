{
  "name": "tiny-helpers",
  "builds": [
    { "src": "index.js", "use": "@now/node" },
    { "src": "static/**", "use": "@now/static" }
  ],
  "routes": [
    { "src": "/favicon.ico", "dest": "static/favicon.ico" },
    { "src": "/feed.xml", "dest": "static/feed.xml" },
    { "src": "/feed.atom", "dest": "static/feed.atom" },
    {
      "src": "/(?<tag>[^/]*)",
      "dest": "/index.js?tag=$tag",
      "headers": {
        "Link": "<https://fonts.googleapis.com/css?family=Exo:600&display=swap>; rel=preload; as=style"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
