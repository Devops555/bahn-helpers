{
  "name": "tiny-helpers",
  "version": "1.0.0",
  "description": "A collection of single-purpose online tools for web developers",
  "main": "index.js",
  "scripts": {
    "setup:screenshots": "node ./scripts/create-screenshots.js",
    "setup:feeds": "node ./scripts/create-feeds.js",
    "setup": "concurrently \"npm:setup:*\"",
    "helper:add": "node ./scripts/add-helper.js",
    "dev:css": "postcss ./src/styles/index.css -w -o ./static/main.css -u postcss-import postcss-nested postcss-clean ",
    "dev:javascript": "rollup -cw",
    "dev:server": "now dev",
    "dev": "concurrently \"npm:dev:*\"",
    "prebuild": "npm run setup",
    "build:css": "postcss ./src/styles/index.css -o ./static/main.css -u postcss-import postcss-nested postcss-clean --no-map",
    "build:javascript": "NODE_ENV=production rollup -c",
    "build": "concurrently \"npm:build:*\"",
    "deploy": "npm run build && now --prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stefanjudis/tiny-helpers.git"
  },
  "engines": {
    "node": "~12.14"
  },
  "keywords": [],
  "author": "stefan judis <stefanjudis@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stefanjudis/tiny-helpers/issues"
  },
  "homepage": "https://github.com/stefanjudis/tiny-helpers#readme",
  "dependencies": {
    "esm": "^3.2.25",
    "feed": "^4.1.0",
    "focus-visible": "^5.0.2",
    "htm": "^2.2.1",
    "inquirer": "^7.0.1",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.1",
    "preact": "^10.1.1",
    "preact-render-to-string": "^5.1.3",
    "puppeteer": "^2.0.0",
    "rollup": "^1.27.14",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.3",
    "slugify": "^1.3.6"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "now": "^16.7.0"
  }
}
